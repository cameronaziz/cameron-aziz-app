datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Post {
  id            String   @id @default(cuid())
  title         String   @default("")
  summary       String   @default("")
  slug          String   @default("")
  content       String   @default("")
  isHighlighted Boolean  @default(false)
  postDate      DateTime
  imageSource   Image?   @relation("Post_imageSource", fields: [imageSourceId], references: [id])
  imageSourceId String?  @map("imageSource")

  @@index([imageSourceId])
}

model Image {
  id                    String  @id @default(cuid())
  title                 String  @default("")
  imageSource_filesize  Int?
  imageSource_extension String?
  imageSource_width     Int?
  imageSource_height    Int?
  imageSource_mode      String?
  imageSource_id        String?
  from_Post_imageSource Post[]  @relation("Post_imageSource")
}

model Person {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}